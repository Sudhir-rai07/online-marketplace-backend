generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  username   String
  email      String    @unique
  password   String
  mobile     BigInt?
  profilePic String?
  role       Role      @default(Buyer) // Seller or Buyer
  verified   Boolean   @default(false)
  orders     Order[]
  wishlist   Product[]
  Token      Token[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([email, username])
}

enum Role {
  Buyer
  Seller
}

model Token {
  id           String    @id @default(uuid())
  user         User      @relation(fields: [userId], references: [id])
  userId       String
  type         TokenType
  token        String    @unique
  tokenExpires DateTime
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([token])
}

enum TokenType {
  AccountVerification
  PasswordReset
}

// Product Scchema
model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  discount    Int      @default(0)
  stock       Int      @default(0)
  category    Category
  images      String[]
  Seller      User     @relation(fields: [sellerId], references: [id])
  sellerId    String
  Order       Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category {
  Faishon
  Electronics
  HomeAppliances
  Beauty
  Sports
  Books
  Toys
  Groceries
  Automotive
  Furniture
}

// Order Schema
model Order {
  id             String        @id @default(uuid())
  user           User          @relation(fields: [userId], references: [id])
  userId         String // Ordered By
  product        Product       @relation(fields: [productId], references: [id])
  productId      String
  address        String
  status         OrderStatus
  quantity       Int           @default(1)
  shippingCharge Float         @default(1)
  total          Float
  paymentMethod  PaymentMethod @default(UPI)
  paymentStatus  PaymentStatus @default(Pending)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([userId])
}

enum OrderStatus {
  Pending
  Processing
  Shipped
  Delivered
  Cancelled
}

enum PaymentMethod {
  UPI
  Card
  COD
}

enum PaymentStatus {
  Pending
  Failed
  Success
}
